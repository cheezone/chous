{
  "name": "chous",
  "version": "0.1.3",
  "module": "dist/index.mjs",
  "type": "module",
  "private": false,
  "bin": {
    "chous": "dist/cli.mjs"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown  --minify",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint ./src",
    "typesafe-i18n": "typesafe-i18n --no-watch",
    "prepare": "simple-git-hooks",
    "release": "bun run test && bun run build && changelogen --release --push --no-output --no-changelog"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run typecheck",
    "commit-msg": "bunx commitlint --edit"
  },
  "description": "The Elegant File Structure Linter",
  "author": "Cheez Lin <https://cheez.tech>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheezone/chous.git"
  },
  "homepage": "https://github.com/cheezone/chous#readme",
  "bugs": {
    "url": "https://github.com/cheezone/chous/issues"
  },
  "keywords": [
    "lint",
    "linter",
    "filesystem",
    "file-structure",
    "cli",
    "i18n"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "changelogen": "^0.6.2",
    "commitlint-plugin-function-rules": "^4.2.1",
    "oxlint": "^1.36.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3"
  },
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "presets",
    "templates",
    "README.md",
    "README.zh.md",
    "public",
    "LICENSE"
  ],
  "dependencies": {
    "compare-versions": "^6.1.1",
    "ignore": "^7.0.5",
    "tinyglobby": "^0.2.15",
    "typesafe-i18n": "^5.26.2"
  }
}
